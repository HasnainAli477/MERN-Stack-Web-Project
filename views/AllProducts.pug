doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title= title
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", crossorigin="anonymous")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js")
        script(src='/jquery.js')
        link(rel="stylesheet", href="/css/mainpage.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js") 
        script(src="https://kit.fontawesome.com/1546e8f138.js", crossorigin="anonymous") 

    body 
        nav.navbar.navbar-light.bg-light
            .container-fluid
                .left 
                    img.align-text-top(src='https://png.pngtree.com/template/20191010/ourmid/pngtree-letter-h-logo-design-vector-initials-h-logo-vector-image_316833.jpg', alt='', width='30', height='24')
                    a.navbar-brand(href='/') Hasnain's Site
                .links_nav-bar
                    a(href="/") Home
                    a(href='#') Contact
                    if (typeof user !== 'undefined')
                        a(href=`/product/cart`) My Cart
                    //- a(href='/product/My-Account', onclick="document.getElementById('form').submit()") React
                    //- form(id="form", action=`/product/My-Account`, method="post")
                    if (typeof user !== 'undefined' && user.role == 'admin')
                        a(href='/product/addproduct') New Product
                .right
                    if (!(typeof user !== 'undefined'))
                        a(href="/user/register") Register
                    if (typeof user !== 'undefined')
                        a(href=`/user/MyAccount/${user._id}`) My Account
                        
                    if(!user)
                        a(href="/user/login") Login 
                    else
                        a(href="/user/logout") LogOut
        block content
    
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM", crossorigin="anonymous")
            